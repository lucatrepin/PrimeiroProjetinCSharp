# top-most EditorConfig file
root = true

# Define formatting rules for C# files
[*.cs]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# C# specific formatting rules
# Essas regras controlam principalmente a indentação
csharp_indent_braces = false
csharp_indent_case_contents = true
csharp_indent_block_contents = true
csharp_indent_labels = one_less_than_current
csharp_indent_switch_labels = true

# Preferências de quebra de linha
# A mais importante para chaves na mesma linha é 'false' para as seguintes:
csharp_new_line_before_open_brace_in_accessor_list = false
csharp_new_line_before_open_brace_in_array_initializer = false
csharp_new_line_before_open_brace_in_block = false # Para blocos gerais como if, for, while
csharp_new_line_before_open_brace_in_constructor_declaration = false
csharp_new_line_before_open_brace_in_delegate_declaration = false
csharp_new_line_before_open_brace_in_empty_object_initializer = false
csharp_new_line_before_open_brace_in_empty_properties_and_accessors = false
csharp_new_line_before_open_brace_in_event_declaration = false
csharp_new_line_before_open_brace_in_method_declaration = false # Para métodos (funções)
csharp_new_line_before_open_brace_in_object_initializer = false
csharp_new_line_before_open_brace_in_property_declaration = false
csharp_new_line_before_open_brace_in_type_declaration = false # Para classes, structs, interfaces

# Estas controlam se há uma nova linha ANTES de alguma chave de abertura.
# Se você quer a chave NA MESMA LINHA, estas devem ser 'false'.
# Cuidado com 'all', pois pode forçar nova linha onde você não quer.
# Para manter a chave na mesma linha, geralmente você quer estas como 'false'.
csharp_new_line_before_open_brace = none # <-- Pode ser uma boa para o estilo de chaves na mesma linha

csharp_new_line_before_else = false
csharp_new_line_before_catch = false
csharp_new_line_before_finally = false
csharp_new_line_before_members_in_object_init = false
csharp_new_line_before_members_in_anonymous_types = false
csharp_new_line_between_query_expression_clauses = false

# Regras de espaçamento
csharp_space_between_method_declaration_parentheses = false
csharp_space_between_parentheses = false
csharp_space_around_binary_operators = before_and_after
csharp_space_after_comma_in_arg_list = true
csharp_space_after_comma_in_initializer_list = true
csharp_space_after_comma_in_type_declaration = true
csharp_space_before_colon_in_base_type_declaration = false
csharp_space_before_colon_in_constructor_declaration = false
csharp_space_before_colon_in_type_declaration = false
